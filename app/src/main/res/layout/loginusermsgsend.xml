<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/loginuser_index_img"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
       android:layout_alignParentRight="true"
        android:layout_height="25dp"
        android:layout_marginRight="10dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linear1"
        android:layout_marginRight="4dp"
        android:background="@drawable/chat_bg"
        android:layout_alignParentRight="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:gravity="center"
        android:layout_centerVertical="true"
        android:textSize="15dp"
android:padding="8dp"
        android:id="@+id/tv_loginuser_msg"
        android:textColor="#000000"
        android:autoLink="web"
        android:layout_toLeftOf="@+id/loginuser_index_img"/>

    </LinearLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/msgtime"
    android:textSize="8sp"
    android:layout_marginTop="1dp"
   android:layout_marginRight="4dp"
    android:layout_marginLeft="6dp"
    android:layout_below="@id/linear1"
    android:padding="1dp"
    android:layout_alignParentRight="true"/>

   <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginuser_index_img"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_toLeftOf="@+id/msgtime"
        android:id="@+id/deliver"/>-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginRight="30dp"
       android:layout_below="@id/linear1"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@+id/msgtime"
        android:id="@+id/img_msg_send"
        android:padding="2dp"
        android:layout_marginTop="-2dp"
        />

</RelativeLayout>